<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corner_white_15dp"
        android:elevation="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <View
            android:id="@+id/layoutGreenOvalIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_stack_oval_shape"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/lblStackViewOrderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_activity_order_placed_title"
            android:layout_toEndOf="@+id/layoutGreenOvalIcon"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/lblStackViewOrderDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_activity_order_description"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/lightGrayBe"
            android:layout_below="@+id/lblStackViewOrderTitle"
            android:layout_toEndOf="@+id/layoutGreenOvalIcon"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

</RelativeLayout>